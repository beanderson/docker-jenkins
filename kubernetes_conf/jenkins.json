{
  "kind": "Deployment",
  "apiVersion": "extensions/v1beta1",
  "metadata": {
    "name": "jenkins",
    "namespace": "default",
    "labels": {
      "name": "jenkins",
      "app": "jenkins"
    }
  },
  "spec": {
    "replicas": 1,
    "strategy": {
      "type": "Recreate"
    },
    "template": {
      "metadata": {
        "labels": {
          "name": "jenkins",
          "app": "jenkins"
        }
      },
      "spec": {
        "securityContext": {
          "fsGroup": 1000
        },
        "containers": [
          {
            "name": "jenkins",
            "image": "quay.io/prsn/jenkins:master",
            "livenessProbe": {
              "httpGet": {
                "path": "/robots.txt",
                "port": 8080
              },
              "initialDelaySeconds": 60,
              "timeoutSeconds": 5
            },
            "ports": [
              {
                "containerPort": 8080,
                "protocol": "TCP"
              },
              {
                "containerPort": 50000,
                "protocol": "TCP"
              }
            ],
            "volumeMounts": [
              {
                "name": "jenkins-data",
                "mountPath": "/var/jenkins_home"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "jenkins-data",
            "awsElasticBlockStore": {
              "volumeID": "vol-4b26dfc8",
              "fsType": "ext4"
            }
          }
        ],
        "imagePullSecrets": [
          {
            "name": "prsn-deploy-pull-secret"
          }
        ]
      }
    }
  }
}