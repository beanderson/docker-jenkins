{
  "kind": "Deployment",
  "apiVersion": "extensions/v1beta1",
  "metadata": {
    "name": "jenkins",
    "namespace": "default",
    "labels": {
      "name": "jenkins"
    }
  },
  "spec": {
    "replicas": 1,
    "strategy": {
      "type": "Recreate"
    },
    "template": {
      "metadata": {
        "labels": {
          "name": "jenkins"
        }
      },
      "spec": {
        "securityContext": {
          "fsGroup": 1000
        },
        "containers": [
          {
            "name": "jenkins",
            "image": "quay.io/prsn/jenkins:master",
            "imagePullPolicy": "Always",
            "livenessProbe": {
              "httpGet": {
                "path": "/robots.txt",
                "port": 8080
              },
              "initialDelaySeconds": 30,
              "timeoutSeconds": 5
            },
            "ports": [
              {
                "name": "jenkins-http",
                "containerPort": 8080,
                "protocol": "TCP"
              },
              {
                "name": "jenkins-disco",
                "containerPort": 50000,
                "protocol": "TCP"
              }
            ],
            "volumeMounts": [
              {
                "name": "jenkins-data",
                "mountPath": "/var/jenkins_home"
              }
            ]
          },
          {
            "name": "jenkins-nginx",
            "image": "quay.io/prsn/jenkins:nginx",
            "imagePullPolicy": "Always",
            "env": [
              {
                "name": "SERVICE_HOST_ENV_NAME",
                "value": "JENKINS_SERVICE_HOST"
              },
              {
                "name": "SERVICE_PORT_ENV_NAME",
                "value": "JENKINS_SERVICE_PORT_UI"
              },
              {
                "name": "ENABLE_SSL",
                "value": "false"
              },
              {
                "name": "ENABLE_BASIC_AUTH",
                "value": "false"
              }
            ],
            "ports": [
              {
                "name": "ssl-proxy-http",
                "containerPort": 80,
                "protocol": "TCP"
              },
              {
                "name": "ssl-proxy-https",
                "containerPort": 443,
                "protocol": "TCP"
              }
            ]
          }
        ],
        "nodeSelector": {
          "failure-domain.beta.kubernetes.io/zone": "us-west-2c"
        },
        "volumes": [
          {
            "name": "jenkins-data",
            "awsElasticBlockStore": {
              "volumeID": "vol-4b26dfc8",
              "fsType": "ext4"
            }
          }
        ],
        "imagePullSecrets": [
          {
            "name": "prsn-deploy-pull-secret"
          }
        ]
      }
    }
  }
}